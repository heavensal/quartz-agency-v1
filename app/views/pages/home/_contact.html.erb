<section id="contact">

  <div>
    <div class="titre">
    <h2>Nous contacter</h2>
  </div>

  <div class="form">
    <div></div>
    <div class="champs">
      <%= form_for :contact, url: root_path do |f| %>
        <%= f.label :nom %>
        <%= f.text_field :nom %>



        <%= f.label :prenom %>
        <%= f.text_field :prenom %>



        <%= f.label :email %>
        <%= f.email_field :email %>



        <%= f.label :telephone %>
        <%= f.text_field :telephone %>



        <%= f.label :entreprise %>
        <%= f.text_field :entreprise %>



        <%= f.label :message %>
        <%= f.text_area :message %>


        <%= f.submit 'Envoyer', class:"btn-envoyer" %>


      <% end %>

    </div>

  </div>

</section>
